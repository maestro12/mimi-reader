        <attr name="imageBorderColor" format="integer" />
        <attr name="imageBorderColorSelected" format="integer" />
        <attr name="imageBackgroundColor" format="integer"/>
    </declare-styleable>

    <declare-styleable name="GridItemImageView">
        <attr name="aspectRatio" format="float" />
        <attr name="aspectRatioEnabled" format="boolean" />
        <attr name="dominantMeasurement">
            <enum name="width" value="0"/>
            <enum name="height" value="1"/>
        </attr>
    </declare-styleable>

