<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="@string/advanced_preference_category"
        app:title="@string/advanced_title"
        app:iconSpaceReserved="false" >

        <ListPreference
            app:defaultValue="@string/http_buffer_size_default"
            app:entries="@array/http_buffer_sizes"
            app:entryValues="@array/http_buffer_sizes_pref"
            app:key="@string/http_buffer_size_pref"
            app:summary="@string/http_buffer_size_summary"
            app:title="@string/http_buffer_size_title"
            app:iconSpaceReserved="false" />

        <Preference
            app:key="@string/clear_hidden_threads_pref"
            app:title="@string/clear_hidden_threads"
            app:iconSpaceReserved="false" />

        <Preference
            app:key="@string/clear_cache_pref"
            app:summary="@string/clear_cache_summary"
            app:title="@string/clear_cache_title"
            app:iconSpaceReserved="false" />

        <Preference
            app:key="@string/chanpass_login_pref"
            app:title="@string/chanpass_login"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>