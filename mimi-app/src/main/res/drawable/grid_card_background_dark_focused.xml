<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"
            android:dither="true"
            android:bottom="0dp">

            <corners android:radius="2dp"/>

            <solid android:color="@color/row_item_border_dark_focused" />

        </shape>
    </item>

    <item android:bottom="2dp">
        <shape android:shape="rectangle"
            android:dither="true">

            <corners android:radius="2dp" />

            <solid android:color="@color/post_highlight_dark" />

            <padding android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="8dp" />
        </shape>
    </item>

    <item android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle"
            android:dither="true">

            <corners android:bottomLeftRadius="2dp"
                android:bottomRightRadius="2dp"/>

            <solid android:color="@color/row_item_background_dark_focused" />

            <padding android:bottom="8dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
</layer-list>